	android:padding="20dp" >

	<TextView
		android:id="@+id/about_cling"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:text="@string/about_cling" />

	<TextView
		android:id="@+id/about_nanohttpd"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
